    <div id="content{{userid}}" class="px-0 cursive">
        <table class="table table-borderless">
            {{#tabledata.total_time_seconds}}
            <tbody>
                <tr>
                    <td><i class="bi bi-feather"></i> Authorship</td>
                    <td><i class="fas fa-check-circle text-success"></i></td>
                </tr>
                <tr>
                    <td><i class="bi bi-person-wheelchair"></i> Effort Ratio</td>
                    <td></td>
                </tr>
                <tr>
                    <td><i class="bi bi-clock"> </i> Time Writing</td>
                    <td>{{formattime}}</td>
                </tr>
                <tr>
                    <td><i class="bi bi-clock-history"> </i>Words per Minute</td>
                    <td> {{tabledata.words_per_minute}}</td>
                </tr>
                <tr>
                    <td><i class="bi bi-file-earmark-text"> </i> Total Words</td>
                    <td>{{tabledata.word_count}}</td>
                </tr>
                <tr>
                    <td><i class="bi bi-backspace"> </i>Backspace %</td>
                    <td>{{tabledata.backspace_percent}}%</td>
                </tr>
            </tbody>
            {{/tabledata.total_time_seconds}}
            {{^tabledata.total_time_seconds}}
            <p class="text-center p-5 bg-light rounded m-5 text-primary" style="vertical-align: middle;text-transform: uppercase;font-weight: 500;">{{#str}}nopaylod, tiny_cursive {{/str}}</p>
            {{/tabledata.total_time_seconds}}
        </table>
    </div>