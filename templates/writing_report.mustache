<div class="tiny_cursive-writing-report">
    <div class="tiny_cursive-writing-report-header rounded">
        <h1>{{username}}</h1>
        <h2>{{#str}}student_writing_statics, tiny_cursive{{/str}}</h2>
    </div>

    <div class="tiny_cursive-writing-report-body"
        style="padding: 20px; max-width: 1200px; margin: 20px auto; color: #333;">
        <!-- Statistics Summary -->
        <div class="tiny_cursive-writing-report-summary"
            style="display: flex; flex-wrap: wrap; gap: 20px; justify-content: space-between; align-items: center; margin-bottom: 30px;">
            <div>
                <p><strong>{{#str}}total_words, tiny_cursive{{/str}}:</strong> {{total_word}}</p>
                <p><strong>{{#str}}total_time, tiny_cursive{{/str}}:</strong> {{total_time}}</p>
                <p><strong>{{#str}}average_min, tiny_cursive{{/str}}:</strong> {{avg_min}}</p>

            </div>
            <div>
                <label for="tiny_cursive-writing-report-course-select" style="font-weight: bold;">Select Course:</label>
                {{{options}}}
            </div>
        </div>

        <!-- Table Section -->
        <table class="tiny_cursive-writing-report-table">
            <thead>
                <tr>
                    <th>{{#str}}module_name, tiny_cursive{{/str}}</th>
                    <th>{{#str}}last_modified, tiny_cursive{{/str}}</th>
                    <th>{{#str}}analytics, tiny_cursive{{/str}}</th>
                    <th>{{#str}}download, tiny_cursive{{/str}}</th>
                </tr>
            </thead>
            <tbody>
                {{#userdata}}
                <tr class="tiny_cursive-writing-report-table-row">
                    <td>{{modulename}}</td>
                    <td>{{lastmodified}}</td>
                    <td>
                        {{{analytics}}}
                    </td>
                    <td>
                        {{{download}}}
                    </td>
                </tr>
                {{/userdata}}
                {{^userdata}}
                <tr><td colspan="4" class="text-center"> {{#str}}no_submission,tiny_cursive{{/str}}</td></tr>
                {{/userdata}}
            </tbody>
        </table>
    </div>
</div>